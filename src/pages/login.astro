---
// login.astro
import BaseLayout from '../layouts/BaseLayout.astro';

const error   = Astro.url.searchParams.get('error');
const message = Astro.url.searchParams.get('message');
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Welcome Back ‚Äî Keto Journey</title>
  <link href="https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,wght@0,9..144,700;0,9..144,900;1,9..144,700&family=DM+Sans:opsz,wght@9..40,400;9..40,500;9..40,600;9..40,700;9..40,800&display=swap" rel="stylesheet"/>
  <style>
    :root {
      --dark:#0a0f0a; --dark2:#0f1710; --card:#141f14;
      --border:rgba(16,185,129,.14); --border2:rgba(16,185,129,.28);
      --text:#e8f0e8; --soft:#6a8a6a; --muted:#3a4e3a;
      --green:#10b981; --green2:#34d399; --red:#ef4444; --gold:#f59e0b;
    }
    *,*::before,*::after { margin:0; padding:0; box-sizing:border-box; }
    html,body { height:100%; }
    body {
      font-family:'DM Sans',sans-serif;
      background:var(--dark); color:var(--text);
      display:grid; grid-template-columns:1fr 1fr;
      min-height:100vh;
    }

    /* ‚îÄ‚îÄ LEFT PANEL (image) ‚îÄ‚îÄ */
    .panel-img {
      position:relative; overflow:hidden;
    }
    .panel-img-bg {
      position:absolute; inset:0;
      background:url('https://images.unsplash.com/photo-1512621776951-a57141f2eefd?w=1000&q=85') center/cover no-repeat;
      transition:transform 8s ease;
    }
    .panel-img:hover .panel-img-bg { transform:scale(1.04); }
    .panel-img-overlay {
      position:absolute; inset:0;
      background:linear-gradient(160deg,rgba(10,15,10,.8) 0%,rgba(10,15,10,.3) 60%,rgba(16,185,129,.1) 100%);
    }
    .panel-content {
      position:relative; z-index:1;
      height:100%; display:flex; flex-direction:column;
      justify-content:space-between; padding:3rem;
    }
    .panel-logo {
      display:flex; align-items:center; gap:.6rem;
      font-family:'Fraunces',serif; font-weight:700; font-size:1.15rem;
      color:#fff; text-decoration:none;
    }
    .panel-logo span { color:var(--green); }
    .panel-headline {
      max-width:400px;
    }
    .panel-eyebrow {
      display:inline-flex; align-items:center; gap:.4rem;
      background:rgba(16,185,129,.15); border:1px solid rgba(16,185,129,.3);
      border-radius:99px; padding:.3rem .85rem;
      font-size:.7rem; font-weight:800; color:var(--green);
      text-transform:uppercase; letter-spacing:.09em; margin-bottom:1rem;
    }
    .panel-title {
      font-family:'Fraunces',serif; font-size:2.8rem; font-weight:900;
      line-height:1.08; color:#fff; margin-bottom:1rem;
    }
    .panel-title em {
      font-style:italic; color:var(--green);
    }
    .panel-sub { font-size:.9rem; color:rgba(255,255,255,.6); line-height:1.6; }
    .panel-stats {
      display:grid; grid-template-columns:repeat(3,1fr); gap:.75rem;
    }
    .ps-item {
      background:rgba(255,255,255,.07); backdrop-filter:blur(12px);
      border:1px solid rgba(255,255,255,.1); border-radius:14px;
      padding:1rem; text-align:center;
    }
    .ps-val {
      font-family:'Fraunces',serif; font-size:1.6rem; font-weight:900;
      color:var(--green); line-height:1; margin-bottom:.2rem;
    }
    .ps-lbl { font-size:.65rem; font-weight:700; color:rgba(255,255,255,.5); text-transform:uppercase; letter-spacing:.06em; }

    /* ‚îÄ‚îÄ RIGHT PANEL (form) ‚îÄ‚îÄ */
    .panel-form {
      display:flex; flex-direction:column; justify-content:center;
      padding:3rem 4rem; background:var(--dark2);
      overflow-y:auto;
    }
    .form-header { margin-bottom:2.5rem; animation:fadeUp .5s ease both; }
    .form-tag {
      display:inline-flex; align-items:center; gap:.4rem;
      background:rgba(16,185,129,.08); border:1px solid var(--border);
      border-radius:99px; padding:.28rem .8rem;
      font-size:.68rem; font-weight:800; color:var(--green);
      text-transform:uppercase; letter-spacing:.08em; margin-bottom:1rem;
    }
    .form-title {
      font-family:'Fraunces',serif; font-size:2.2rem; font-weight:900;
      line-height:1.1; margin-bottom:.5rem;
    }
    .form-title em {
      font-style:italic;
      background:linear-gradient(135deg,var(--green),var(--green2));
      -webkit-background-clip:text; -webkit-text-fill-color:transparent;
    }
    .form-sub { font-size:.875rem; color:var(--soft); }

    /* ‚îÄ‚îÄ ALERTS ‚îÄ‚îÄ */
    .alert {
      display:flex; align-items:flex-start; gap:.75rem;
      padding:1rem 1.25rem; border-radius:12px; font-size:.82rem; font-weight:600;
      margin-bottom:1.5rem; animation:fadeUp .4s ease both;
    }
    .alert-error { background:rgba(239,68,68,.08); border:1px solid rgba(239,68,68,.25); color:#fca5a5; }
    .alert-success { background:rgba(16,185,129,.08); border:1px solid var(--border2); color:var(--green2); }

    /* ‚îÄ‚îÄ FORM FIELDS ‚îÄ‚îÄ */
    .field { margin-bottom:1.25rem; animation:fadeUp .4s ease both; }
    .field-label {
      display:block; font-size:.78rem; font-weight:800;
      color:var(--soft); text-transform:uppercase; letter-spacing:.07em;
      margin-bottom:.5rem;
    }
    .field-wrap { position:relative; }
    .field-icon {
      position:absolute; left:1rem; top:50%; transform:translateY(-50%);
      font-size:.95rem; pointer-events:none;
    }
    .field-input {
      width:100%; padding:.875rem 1.1rem .875rem 2.75rem;
      background:var(--card); border:1.5px solid var(--border);
      border-radius:13px; color:var(--text);
      font-family:'DM Sans',sans-serif; font-size:.875rem; font-weight:500;
      transition:all .22s; outline:none;
    }
    .field-input::placeholder { color:var(--muted); }
    .field-input:focus {
      border-color:var(--green);
      background:rgba(16,185,129,.04);
      box-shadow:0 0 0 4px rgba(16,185,129,.1);
    }
    .field-pw-toggle {
      position:absolute; right:1rem; top:50%; transform:translateY(-50%);
      background:none; border:none; cursor:pointer;
      color:var(--soft); font-size:1rem; transition:color .2s; padding:.25rem;
    }
    .field-pw-toggle:hover { color:var(--text); }
    .field-error {
      display:flex; align-items:center; gap:.4rem;
      font-size:.73rem; color:#fca5a5; margin-top:.5rem;
    }

    /* ‚îÄ‚îÄ FORGOT LINK ‚îÄ‚îÄ */
    .forgot-row {
      display:flex; justify-content:flex-end; margin-top:-.5rem; margin-bottom:1.25rem;
    }
    .forgot-link {
      font-size:.75rem; font-weight:700; color:var(--soft);
      text-decoration:none; transition:color .2s;
    }
    .forgot-link:hover { color:var(--green); }

    /* ‚îÄ‚îÄ SUBMIT ‚îÄ‚îÄ */
    .btn-submit {
      width:100%; padding:.975rem;
      background:linear-gradient(135deg,var(--green),var(--green2));
      border:none; border-radius:13px; color:#fff;
      font-family:'DM Sans',sans-serif; font-weight:800; font-size:.95rem;
      cursor:pointer; transition:all .25s;
      position:relative; overflow:hidden;
      display:flex; align-items:center; justify-content:center; gap:.5rem;
    }
    .btn-submit::before {
      content:''; position:absolute; inset:0;
      background:linear-gradient(90deg,transparent,rgba(255,255,255,.12),transparent);
      transform:translateX(-100%); transition:transform .5s;
    }
    .btn-submit:hover::before { transform:translateX(100%); }
    .btn-submit:hover { transform:translateY(-2px); box-shadow:0 8px 24px rgba(16,185,129,.4); }
    .btn-submit:disabled { opacity:.5; cursor:not-allowed; transform:none; }
    .btn-spinner {
      display:none; width:18px; height:18px; border-radius:50%;
      border:2.5px solid rgba(255,255,255,.3); border-top-color:#fff;
      animation:spin .7s linear infinite;
    }
    @keyframes spin { to{transform:rotate(360deg);} }

    /* ‚îÄ‚îÄ DIVIDER ‚îÄ‚îÄ */
    .divider { display:flex; align-items:center; gap:1rem; margin:1.5rem 0; }
    .div-line { flex:1; height:1px; background:var(--border); }
    .div-text { font-size:.72rem; font-weight:700; color:var(--muted); white-space:nowrap; }

    /* ‚îÄ‚îÄ SIGNUP LINK ‚îÄ‚îÄ */
    .signup-prompt {
      text-align:center; font-size:.82rem; color:var(--soft);
      animation:fadeUp .4s .3s ease both;
    }
    .signup-prompt a { color:var(--green); font-weight:800; text-decoration:none; transition:all .2s; }
    .signup-prompt a:hover { text-decoration:underline; }

    /* ‚îÄ‚îÄ TRUST ROW ‚îÄ‚îÄ */
    .trust-row {
      display:flex; justify-content:center; gap:1.5rem; flex-wrap:wrap;
      margin-top:1.75rem; padding-top:1.75rem; border-top:1px solid var(--border);
    }
    .trust-item { display:flex; align-items:center; gap:.4rem; font-size:.72rem; color:var(--muted); }

    @keyframes fadeUp { from{opacity:0;transform:translateY(10px);}to{opacity:1;transform:translateY(0);} }

    @media(max-width:768px) {
      body { grid-template-columns:1fr; }
      .panel-img { display:none; }
      .panel-form { padding:2.5rem 1.75rem; }
    }
  </style>
</head>
<body>

<!-- LEFT: Image Panel -->
<div class="panel-img">
  <div class="panel-img-bg"></div>
  <div class="panel-img-overlay"></div>
  <div class="panel-content">
    <a href="/" class="panel-logo">ü•ë Keto<span>Journey</span></a>

    <div class="panel-headline">
      <div class="panel-eyebrow">üî• 30-Day Transformation</div>
      <h2 class="panel-title">
        Welcome<br/><em>back</em> to<br/>your journey
      </h2>
      <p class="panel-sub">
        Your progress is waiting. Log in to continue building the habits that will transform your body.
      </p>
    </div>

    <div class="panel-stats">
      <div class="ps-item">
        <div class="ps-val">10K+</div>
        <div class="ps-lbl">Members</div>
      </div>
      <div class="ps-item">
        <div class="ps-val">4.9‚òÖ</div>
        <div class="ps-lbl">Rating</div>
      </div>
      <div class="ps-item">
        <div class="ps-val">87</div>
        <div class="ps-lbl">Recipes</div>
      </div>
    </div>
  </div>
</div>

<!-- RIGHT: Form Panel -->
<div class="panel-form">
  <div class="form-header">
    <div class="form-tag">üëã Welcome back</div>
    <h1 class="form-title">Log in to your<br/><em>account</em></h1>
    <p class="form-sub">Continue your transformation journey</p>
  </div>

  {error && (
    <div class="alert alert-error">
      <span>‚ö†Ô∏è</span>
      <span>
        {error === 'invalid' && 'Wrong email or password. Please try again.'}
        {error === 'auth'    && 'Authentication error. Please try again.'}
        {error !== 'invalid' && error !== 'auth' && 'Something went wrong. Please try again.'}
      </span>
    </div>
  )}

  {message && (
    <div class="alert alert-success">
      <span>‚úÖ</span>
      <span>{message}</span>
    </div>
  )}

  <form action="/api/auth/login" method="POST" id="loginForm">

    <div class="field" style="animation-delay:.05s;">
      <label class="field-label" for="email">Email Address</label>
      <div class="field-wrap">
        <span class="field-icon">‚úâÔ∏è</span>
        <input type="email" id="email" name="email" required
          class="field-input" placeholder="your@email.com"/>
      </div>
    </div>

    <div class="field" style="animation-delay:.1s;">
      <label class="field-label" for="password">Password</label>
      <div class="field-wrap">
        <span class="field-icon">üîí</span>
        <input type="password" id="password" name="password" required
          class="field-input" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" id="pwField"/>
        <button type="button" class="field-pw-toggle" id="pwToggle" aria-label="Show password">üëÅÔ∏è</button>
      </div>
    </div>

    <div class="forgot-row">
      <a href="/forgot-password" class="forgot-link">Forgot password?</a>
    </div>

    <button type="submit" class="btn-submit" id="loginBtn">
      <div class="btn-spinner" id="spinner"></div>
      <span id="btnText">Log In ‚Üí</span>
    </button>

  </form>

  <div class="divider">
    <div class="div-line"></div>
    <div class="div-text">New to Keto Journey?</div>
    <div class="div-line"></div>
  </div>

  <div class="signup-prompt">
    Don't have an account yet?
    <a href="/signup">Create one ‚Üí</a>
  </div>

  <div class="trust-row">
    <div class="trust-item"><span>üîí</span> Secure login</div>
    <div class="trust-item"><span>üõ°Ô∏è</span> 30-day guarantee</div>
    <div class="trust-item"><span>‚ö°</span> Instant access</div>
  </div>
</div>

<script is:inline>
  // Password toggle
  const pwField = document.getElementById('password');
  const pwToggle = document.getElementById('pwToggle');
  if (pwField && pwToggle) {
    pwToggle.addEventListener('click', () => {
      const isText = pwField.type === 'text';
      pwField.type = isText ? 'password' : 'text';
      pwToggle.textContent = isText ? 'üëÅÔ∏è' : 'üôà';
    });
  }

  // Loading state on submit
  const form = document.getElementById('loginForm');
  const btn  = document.getElementById('loginBtn');
  const spinner = document.getElementById('spinner');
  const btnText = document.getElementById('btnText');
  if (form) {
    form.addEventListener('submit', () => {
      btn.disabled = true;
      spinner.style.display = 'block';
      btnText.textContent = 'Logging in‚Ä¶';
    });
  }
</script>
</body>
</html>