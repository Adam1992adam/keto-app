---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { supabase, getProfile, isSubscriptionActive } from '../../../lib/supabase';

// Auth check
const accessToken = Astro.cookies.get('sb-access-token')?.value;
if (!accessToken) return Astro.redirect('/login');

const { data: { user } } = await supabase.auth.getUser(accessToken);
if (!user) return Astro.redirect('/login');

const profile = await getProfile(user.id);
if (!profile || !isSubscriptionActive(profile)) {
  return Astro.redirect('/dashboard/upgrade');
}

// Get recipe ID from URL
const { id } = Astro.params;

// Fetch recipe
const { data: recipe, error } = await supabase
  .from('recipes')
  .select('*')
  .eq('id', id)
  .single();

if (error || !recipe) {
  return Astro.redirect('/dashboard');
}

// Difficulty colors
const difficultyColors = {
  easy: 'bg-green-100 text-green-800 border-green-300',
  medium: 'bg-yellow-100 text-yellow-800 border-yellow-300',
  hard: 'bg-red-100 text-red-800 border-red-300',
};

const difficultyLabels = {
  easy: 'Easy',
  medium: 'Medium',
  hard: 'Hard',
};
---

<BaseLayout title={recipe.title + ' - Keto App'}>
  <div class="min-h-screen bg-gradient-to-br from-gray-50 to-primary-50">
    <!-- Navigation -->
    <nav class="bg-white shadow-sm border-b sticky top-0 z-10">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <div class="flex items-center gap-4">
            <a href="/dashboard" class="text-2xl font-bold text-primary-600">
              ü•ë Keto App
            </a>
            <span class="text-gray-400">|</span>
            <a href="/dashboard" class="text-gray-600 hover:text-primary-600 transition">
              ‚Üê Back to Dashboard
            </a>
          </div>
          
          <div class="flex items-center gap-4">
            <span class="text-gray-700">{profile.full_name}</span>
            <form action="/api/auth/logout" method="POST">
              <button type="submit" class="text-red-600 hover:text-red-700 font-medium">
                Logout
              </button>
            </form>
          </div>
        </div>
      </div>
    </nav>

    <main class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Recipe Header with Gradient -->
      <div class="bg-gradient-to-r from-primary-600 to-emerald-600 rounded-2xl shadow-xl p-8 mb-8 text-white">
        <div class="flex items-start justify-between mb-4">
          <div class="flex-1">
            <h1 class="text-4xl font-bold mb-3">{recipe.title}</h1>
            <p class="text-primary-100 text-lg">{recipe.description}</p>
          </div>
          <div>
            <span class={'px-4 py-2 rounded-full text-sm font-semibold border-2 ' + difficultyColors[recipe.difficulty]}>
              {difficultyLabels[recipe.difficulty]}
            </span>
          </div>
        </div>

        <!-- Quick Info -->
        <div class="flex flex-wrap gap-6 mt-6">
          <div class="flex items-center gap-2 bg-white/20 px-4 py-2 rounded-lg backdrop-blur-sm">
            <span class="text-2xl">‚è±Ô∏è</span>
            <div>
              <p class="text-xs text-primary-100">Prep Time</p>
              <p class="font-semibold">{recipe.prep_time} min</p>
            </div>
          </div>
          <div class="flex items-center gap-2 bg-white/20 px-4 py-2 rounded-lg backdrop-blur-sm">
            <span class="text-2xl">üç≥</span>
            <div>
              <p class="text-xs text-primary-100">Cook Time</p>
              <p class="font-semibold">{recipe.cook_time} min</p>
            </div>
          </div>
          <div class="flex items-center gap-2 bg-white/20 px-4 py-2 rounded-lg backdrop-blur-sm">
            <span class="text-2xl">üçΩÔ∏è</span>
            <div>
              <p class="text-xs text-primary-100">Servings</p>
              <p class="font-semibold">{recipe.servings}</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Nutrition Facts - Cards Grid -->
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 mb-8">
        <div class="bg-gradient-to-br from-red-50 to-red-100 border-2 border-red-200 rounded-xl p-4 text-center hover:shadow-lg transition-all">
          <p class="text-3xl font-bold text-red-600">{recipe.calories}</p>
          <p class="text-sm text-red-700 font-medium">Calories</p>
        </div>
        <div class="bg-gradient-to-br from-blue-50 to-blue-100 border-2 border-blue-200 rounded-xl p-4 text-center hover:shadow-lg transition-all">
          <p class="text-3xl font-bold text-blue-600">{recipe.protein}g</p>
          <p class="text-sm text-blue-700 font-medium">Protein</p>
        </div>
        <div class="bg-gradient-to-br from-yellow-50 to-yellow-100 border-2 border-yellow-200 rounded-xl p-4 text-center hover:shadow-lg transition-all">
          <p class="text-3xl font-bold text-yellow-600">{recipe.fat}g</p>
          <p class="text-sm text-yellow-700 font-medium">Fat</p>
        </div>
        <div class="bg-gradient-to-br from-green-50 to-green-100 border-2 border-green-200 rounded-xl p-4 text-center hover:shadow-lg transition-all">
          <p class="text-3xl font-bold text-green-600">{recipe.net_carbs}g</p>
          <p class="text-sm text-green-700 font-medium">Net Carbs</p>
        </div>
        <div class="bg-gradient-to-br from-purple-50 to-purple-100 border-2 border-purple-200 rounded-xl p-4 text-center hover:shadow-lg transition-all">
          <p class="text-3xl font-bold text-purple-600">{recipe.fiber}g</p>
          <p class="text-sm text-purple-700 font-medium">Fiber</p>
        </div>
        <div class="bg-gradient-to-br from-orange-50 to-orange-100 border-2 border-orange-200 rounded-xl p-4 text-center hover:shadow-lg transition-all">
          <p class="text-3xl font-bold text-orange-600">{recipe.carbs}g</p>
          <p class="text-sm text-orange-700 font-medium">Total Carbs</p>
        </div>
      </div>

      <div class="grid lg:grid-cols-2 gap-8">
        <!-- Ingredients -->
        <div class="bg-white rounded-2xl shadow-lg p-6 border-2 border-primary-100">
          <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-2">
            <span class="text-3xl">üõí</span>
            Ingredients
          </h2>
          <ul class="space-y-3">
            {recipe.ingredients.map((ingredient, index) => (
              <li class="flex items-start gap-3 p-3 rounded-lg hover:bg-primary-50 transition-colors">
                <input 
                  type="checkbox" 
                  id={'ingredient-' + index}
                  class="mt-1 w-5 h-5 text-primary-600 rounded focus:ring-primary-500"
                />
                <label for={'ingredient-' + index} class="flex-1 cursor-pointer">
                  <span class="font-medium text-gray-800">{ingredient.amount} {ingredient.unit}</span>
                  <span class="text-gray-700"> {ingredient.item}</span>
                </label>
              </li>
            ))}
          </ul>
        </div>

        <!-- Instructions -->
        <div class="bg-white rounded-2xl shadow-lg p-6 border-2 border-primary-100">
          <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-2">
            <span class="text-3xl">üë®‚Äçüç≥</span>
            Instructions
          </h2>
          <ol class="space-y-4">
            {recipe.instructions.map((step, index) => (
              <li class="flex gap-4">
                <span class="flex-shrink-0 w-8 h-8 bg-gradient-to-br from-primary-500 to-primary-600 text-white rounded-full flex items-center justify-center font-bold shadow-md">
                  {index + 1}
                </span>
                <p class="flex-1 text-gray-700 pt-1">{step}</p>
              </li>
            ))}
          </ol>
        </div>
      </div>

      <!-- Tips (if available) -->
      {recipe.tips && recipe.tips.length > 0 && (
        <div class="mt-8 bg-gradient-to-r from-blue-50 to-cyan-50 border-2 border-blue-200 rounded-2xl p-6 shadow-lg">
          <h2 class="text-2xl font-bold text-blue-900 mb-4 flex items-center gap-2">
            <span class="text-3xl">üí°</span>
            Chef's Tips
          </h2>
          <ul class="space-y-2">
            {recipe.tips.map((tip) => (
              <li class="flex items-start gap-2 text-blue-800">
                <span class="text-blue-500 mt-1">‚ñ∏</span>
                <span>{tip}</span>
              </li>
            ))}
          </ul>
        </div>
      )}

      <!-- Action Buttons -->
      <div class="mt-8 flex flex-wrap gap-4 justify-center">
        <button class="bg-gradient-to-r from-primary-600 to-primary-700 text-white px-8 py-3 rounded-xl font-semibold hover:shadow-xl transition-all transform hover:scale-105">
          ‚úì Mark as Completed
        </button>
        <button class="bg-gradient-to-r from-yellow-500 to-orange-500 text-white px-8 py-3 rounded-xl font-semibold hover:shadow-xl transition-all transform hover:scale-105">
          ‚≠ê Save to Favorites
        </button>
        <button class="bg-gradient-to-r from-gray-700 to-gray-800 text-white px-8 py-3 rounded-xl font-semibold hover:shadow-xl transition-all transform hover:scale-105">
          üñ®Ô∏è Print Recipe
        </button>
      </div>

      <!-- Back Button -->
      <div class="mt-8 text-center">
        <a 
          href="/dashboard" 
          class="inline-flex items-center gap-2 text-primary-600 hover:text-primary-700 font-semibold"
        >
          ‚Üê Back to Dashboard
        </a>
      </div>
    </main>
  </div>
</BaseLayout>