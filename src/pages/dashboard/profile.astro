import BaseLayout from '../../layouts/BaseLayout.astro';
import { supabase, getProfile, isSubscriptionActive, getWeightLogs, getUserJourney, getDailyTasks, getWaterIntake, getXPTransactions, calculateBMI, calculateCalorieTarget } from '../../lib/supabase';

const accessToken = Astro.cookies.get('sb-access-token')?.value;
if (!accessToken) return Astro.redirect('/login');

const { data: { user } } = await supabase.auth.getUser(accessToken);
if (!user) return Astro.redirect('/login');

const profile = await getProfile(user.id);
if (!profile || !isSubscriptionActive(profile)) {
  return Astro.redirect('/dashboard/upgrade');
}

// Get Journey Data
const journey = await getUserJourney(user.id);
const currentDay = journey?.current_day || 1;

// ‚úÖ ÿ•ÿ∂ÿßŸÅÿ© ÿßŸÑŸÖÿ™ÿ∫Ÿäÿ±ÿßÿ™ ŸÑŸÑŸÄ Notifications
const dailyTasks = await getDailyTasks(user.id, currentDay);
const waterIntake = await getWaterIntake(user.id, currentDay);
const canInteract = true;
const incompleteTasks = dailyTasks?.filter(t => !t.completed) || [];

// Get comprehensive stats
const weightLogs = await getWeightLogs(user.id, 30);

// Get all tasks for all days to calculate stats
const { data: allTasks } = await supabase
  .from('daily_tasks')
  .select('*')
  .eq('user_id', user.id)
  .order('day_number', { ascending: true });

// Get XP transactions
const xpTransactions = await getXPTransactions(user.id, 30);

// Completion data by day
const completionData = [];
for (let day = 1; day <= Math.min(journey.current_day, 30); day++) {
  const dayTasks = allTasks?.filter(t => t.day_number === day) || [];
  const dayCompleted = dayTasks.filter(t => t.completed).length;
  const dayTotal = dayTasks.length;
  const percentage = dayTotal > 0 ? Math.round((dayCompleted / dayTotal) * 100) : 0;
  completionData.push({ 
    day, 
    percentage, 
    completed: dayCompleted, 
    total: dayTotal 
  });
}

console.log('Completion Data:', completionData);

// XP data by day
const xpData = [];
let cumulativeXP = 0;
for (let day = 1; day <= Math.min(journey.current_day, 30); day++) {
  const dayXP = xpTransactions?.filter(t => t.day_number === day)
    .reduce((sum, t) => sum + (t.xp_amount || 0), 0) || 0;
  cumulativeXP += dayXP;
  xpData.push({ 
    day, 
    xp: cumulativeXP, 
    daily: dayXP 
  });
}

console.log('XP Data:', xpData);

// Stats from Journey
const totalDaysCompleted = journey?.current_day ? journey.current_day - 1 : 0;
const currentStreak = journey?.streak_days || 0;
const longestStreak = journey?.longest_streak || 0;
const perfectDays = journey?.perfect_days || 0;
const totalXP = journey?.total_xp || 0;
const level = journey?.level || 1;

// Weight stats
const currentWeight = profile.weight_kg || 0;
const startWeight = weightLogs.length > 0 ? weightLogs[weightLogs.length - 1].weight_kg : currentWeight;
const weightChange = startWeight - currentWeight;
const targetWeight = profile.target_weight_kg || currentWeight - 5;
const weightToLose = currentWeight - targetWeight;
const progressPercent = weightToLose > 0 ? ((startWeight - currentWeight) / (startWeight - targetWeight)) * 100 : 0;

// Calculate BMI
const bmi = profile.weight_kg && profile.height_cm ? await calculateBMI(profile.weight_kg, profile.height_cm) : null;

function getBMICategory(bmi: number | null) {
  if (!bmi) return { label: 'Unknown', color: 'gray' };
  if (bmi < 18.5) return { label: 'Underweight', color: 'blue' };
  if (bmi < 25) return { label: 'Normal', color: 'green' };
  if (bmi < 30) return { label: 'Overweight', color: 'yellow' };
  return { label: 'Obese', color: 'red' };
}

const bmiCategory = getBMICategory(bmi);

// Calorie target
const calorieTarget = await calculateCalorieTarget(profile);

// Calculate macros (Keto: 70% fat, 25% protein, 5% carbs)
const fatGrams = Math.round((calorieTarget * 0.70) / 9);
const proteinGrams = Math.round((calorieTarget * 0.25) / 4);
const carbGrams = Math.round((calorieTarget * 0.05) / 4);

// Days left in subscription
const daysLeft = profile.subscription_end_date 
  ? Math.max(0, Math.ceil((new Date(profile.subscription_end_date).getTime() - Date.now()) / (1000 * 60 * 60 * 24)))
  : 0;

const subscriptionProgress = daysLeft > 0 ? ((30 - daysLeft) / 30) * 100 : 100;

// Achievement system updated
const achievementsList = [
  { id: 'first_day', name: 'First Step', description: 'Complete your first day', icon: 'üéØ', unlocked: perfectDays >= 1 },
  { id: 'week_1', name: 'Week Warrior', description: 'Complete 7 days perfectly', icon: 'üìÖ', unlocked: perfectDays >= 7 },
  { id: 'week_2', name: 'Two Weeks Strong', description: 'Complete 14 days perfectly', icon: 'üí™', unlocked: perfectDays >= 14 },
  { id: 'streak_7', name: 'On Fire', description: '7 day streak', icon: 'üî•', unlocked: currentStreak >= 7 },
  { id: 'level_5', name: 'Level Master', description: 'Reach Level 5', icon: '‚≠ê', unlocked: level >= 5 },
  { id: 'xp_500', name: 'XP Hunter', description: 'Earn 500 XP', icon: 'üèÖ', unlocked: totalXP >= 500 },
  { id: 'weight_loss_1kg', name: 'First Kilo', description: 'Lose 1kg', icon: '‚öñÔ∏è', unlocked: weightChange >= 1 },
  { id: 'weight_loss_5kg', name: 'Five Down', description: 'Lose 5kg', icon: 'üèÜ', unlocked: weightChange >= 5 },
  { id: 'halfway', name: 'Halfway Hero', description: 'Reach Day 15', icon: 'üåü', unlocked: currentDay >= 15 },
  { id: 'champion', name: 'Keto Champion', description: 'Complete 30 days', icon: 'üëë', unlocked: currentDay >= 30 },
];

const unlockedAchievements = achievementsList.filter(a => a.unlocked);
const lockedAchievements = achievementsList.filter(a => !a.unlocked);

// Prepare weight chart data
const chartData = weightLogs.length > 0 
  ? weightLogs.reverse().map(log => ({
      date: new Date(log.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }),
      weight: log.weight_kg
    }))
  : [];

const chartDataJSON = JSON.stringify(chartData);

// Prepare completion chart data
const completionChartData = completionData.map(d => ({
  day: 'Day ' + d.day,
  percentage: d.percentage
}));
const completionChartJSON = JSON.stringify(completionChartData);

// Prepare XP chart data
const xpChartData = xpData.map(d => ({
  day: 'Day ' + d.day,
  xp: d.xp
}));
const xpChartJSON = JSON.stringify(xpChartData);

// Activity summary from tasks
const totalTasksCompleted = allTasks?.filter(t => t.completed).length || 0;
const totalMealsCompleted = allTasks?.filter(t => t.completed && ['breakfast', 'lunch', 'dinner', 'snack'].includes(t.task_type)).length || 0;

// Water glasses from water_intake table
const { data: waterData } = await supabase
  .from('water_intake')
  .select('glasses_count')
  .eq('user_id', user.id);
const totalWaterGlasses = waterData?.reduce((sum, w) => sum + w.glasses_count, 0) || 0;

const totalExerciseMinutes = 0; // Placeholder - not tracking exercise yet
