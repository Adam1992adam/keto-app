                <p style={`font-weight: 700; font-size: 1.0625rem; ${task.completed ? 'color: var(--text-secondary); text-decoration: line-through;' : 'color: var(--text-primary);'}`}>
                  {task.task_title}
                </p>
                {task.completed && task.completed_at && (
                  <p style="font-size: 0.8125rem; color: var(--text-secondary); margin-top: 0.375rem; font-weight: 600;">
                    ‚úì Completed at {new Date(task.completed_at).toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' })}
                  </p>
                )}
              </div>
            </div>
            <div class="badge badge-primary" style="font-size: 0.9375rem;">+{task.xp_earned} XP</div>
          </div>
        ))}

        {waterIntake && (
          <div style="margin-top: 2rem; padding: 2rem; background: linear-gradient(135deg, rgba(6,182,212,0.1), rgba(14,165,233,0.1)); border-radius: 1.5rem; border: 2px solid #06b6d4; box-shadow: var(--shadow-lg);">
            <div class="flex-between mb-2">
              <div>
                <h4 style="font-weight: 800; font-size: 1.25rem; color: var(--text-primary);">üíß Water Intake</h4>
                <p style="color: var(--text-secondary); font-size: 1.0625rem; margin-top: 0.5rem; font-weight: 600;">
                  <span id="water-count" style="font-weight: 900; font-size: 1.75rem; color: #06b6d4;">{waterIntake.glasses_count}</span>
                  <span> / {waterIntake.target_glasses} glasses</span>
                </p>
              </div>
              {canInteract && (
                <div class="flex gap-1">
                  <button class="btn btn-secondary btn-sm" data-water-action="minus">‚àí</button>
                  <button class="btn btn-primary btn-sm" data-water-action="plus">+</button>
                </div>
              )}
            </div>
            <div class="water-grid">
              {Array.from({ length: waterIntake.target_glasses }, (_, i) => (
                <div data-glass-index={i} class={`water-glass ${i < waterIntake.glasses_count ? 'filled' : ''}`}>üíß</div>
              ))}
            </div>
          </div>
        )}
      </div>
    </div>

    <!-- Meals Tab -->
    <div id="tab-meals" class="tab-content">
      <div class="flex-between mb-4">
        <h3 style="font-size: 1.5rem; font-weight: 800; background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary)); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">Today's Meals</h3>
        <a href="/dashboard/shopping-list" class="btn btn-primary">üõí Shopping List</a>
      </div>
      <div class="grid grid-2">
        {todayMeals.map((meal) => (
          <div class="card" style="padding: 0; overflow: hidden;">
            {meal.recipe?.image_url && (
              <div style="position: relative;">
                <img src={meal.recipe.image_url} alt={meal.recipe.title} style="width: 100%; height: 250px; object-fit: cover;" />
                <div style="position: absolute; bottom: 0; left: 0; right: 0; padding: 1.5rem; background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);">
                  <span style="color: white; font-weight: 800; font-size: 1.125rem; text-shadow: 0 2px 4px rgba(0,0,0,0.5);">
                    {meal.meal_type === 'breakfast' && '‚òÄÔ∏è'}{meal.meal_type === 'lunch' && 'üåû'}{meal.meal_type === 'dinner' && 'üåô'}{meal.meal_type === 'snack' && 'üçé'}
                    {' '}{meal.meal_type.charAt(0).toUpperCase() + meal.meal_type.slice(1)}
                  </span>
                </div>
              </div>
            )}
            <div style="padding: 2rem;">
              <h4 style="font-weight: 800; font-size: 1.25rem; margin-bottom: 1.5rem; color: var(--text-primary);">{meal.recipe?.title}</h4>
              <a href={`/dashboard/recipe/${meal.recipe?.id}`} class="btn btn-primary" style="width: 100%; justify-content: center;">View Recipe ‚Üí</a>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Nutrition Tab -->
    <div id="tab-nutrition" class="tab-content">
      <h3 style="font-size: 2rem; font-weight: 900; margin-bottom: 2rem; background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary), #3b82f6); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
        <span style="font-size: 2.5rem;">üìä</span> Smart Macros Tracker
      </h3>

      <div class="macros-grid">
        <div class="macro-card-3d calories">
          <div class="macro-percent">{caloriesPercent}%</div>
          <div class="macro-label">Calories</div>
          <div class="macro-value" data-macro-type="calories">{actualCalories}</div>
          <div class="macro-target">Target: {targetCalories} kcal</div>
          <div class="macro-progress">
            <div class="macro-progress-fill" data-progress="calories" style={`width: ${Math.min(caloriesPercent, 100)}%`}></div>
          </div>
        </div>
        <div class="macro-card-3d protein">
          <div class="macro-percent">{proteinPercent}%</div>
          <div class="macro-label">Protein</div>
          <div class="macro-value" data-macro-type="protein">{actualProtein}g</div>
          <div class="macro-target">Target: {targetProtein}g</div>
          <div class="macro-progress">
            <div class="macro-progress-fill" data-progress="protein" style={`width: ${Math.min(proteinPercent, 100)}%`}></div>
          </div>
        </div>
        <div class="macro-card-3d fat">
          <div class="macro-percent">{fatPercent}%</div>
          <div class="macro-label">Fat</div>
          <div class="macro-value" data-macro-type="fat">{actualFat}g</div>
          <div class="macro-target">Target: {targetFat}g</div>
          <div class="macro-progress">
            <div class="macro-progress-fill" data-progress="fat" style={`width: ${Math.min(fatPercent, 100)}%`}></div>
          </div>
        </div>
        <div class="macro-card-3d carbs">
          <div class="macro-percent">{carbsPercent}%</div>
          <div class="macro-label">Net Carbs</div>
          <div class="macro-value" data-macro-type="carbs">{actualCarbs}g</div>
          <div class="macro-target">Target: {targetCarbs}g</div>
          <div class="macro-progress">
            <div class="macro-progress-fill" data-progress="carbs" style={`width: ${Math.min(carbsPercent, 100)}%`}></div>
          </div>
        </div>
      </div>

      {actualCalories > 0 && (
        <div class="grid grid-2 mb-4">
          <div class="card">
            <h4 style="font-size: 1.25rem; font-weight: 800; margin-bottom: 1.5rem; display: flex; align-items: center; gap: 0.75rem; background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary)); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
              <span style="font-size: 1.75rem;">ü•ß</span><span>Calorie Distribution</span>
            </h4>
            <div style="position: relative; height: 320px;"><canvas id="macrosPieChart"></canvas></div>
          </div>
          <div class="card">
            <h4 style="font-size: 1.25rem; font-weight: 800; margin-bottom: 1.5rem; display: flex; align-items: center; gap: 0.75rem; background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary)); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
              <span style="font-size: 1.75rem;">üìä</span><span>Target vs Actual</span>
            </h4>
            <div style="position: relative; height: 320px;"><canvas id="macrosBarChart"></canvas></div>
          </div>
        </div>
      )}

      <div class="manual-entry-form">
        <h4 style="font-size: 1.375rem; font-weight: 900; margin-bottom: 1rem; position: relative; z-index: 1;">‚ûï Add Custom Food</h4>
        <p style="font-size: 1.0625rem; opacity: 0.95; margin-bottom: 1.5rem; position: relative; z-index: 1; font-weight: 600;">Track additional meals or snacks that aren't in your plan</p>
        <form id="manual-macro-form">
          <div class="form-grid">
            <div class="form-group"><label>Calories</label><input type="number" id="manual-calories" placeholder="0" min="0" required /></div>
            <div class="form-group"><label>Protein (g)</label><input type="number" id="manual-protein" placeholder="0" min="0" step="0.1" required /></div>
            <div class="form-group"><label>Fat (g)</label><input type="number" id="manual-fat" placeholder="0" min="0" step="0.1" required /></div>
            <div class="form-group"><label>Net Carbs (g)</label><input type="number" id="manual-carbs" placeholder="0" min="0" step="0.1" required /></div>
          </div>
          <button type="submit" class="btn btn-primary" style="margin-top: 1.5rem; width: 100%; justify-content: center; background: white; color: #667eea; font-size: 1.0625rem; position: relative; z-index: 1;">
            <span style="font-size: 1.25rem;">‚ú®</span><span>Add to Today's Macros</span>
          </button>
        </form>
      </div>
    </div>

    <!-- Calendar Tab -->
    <div id="tab-calendar" class="tab-content">
      <div class="card">
        <h3 style="font-size: 1.5rem; font-weight: 800; margin-bottom: 2rem; background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary)); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">30-Day Journey</h3>
        <div class="calendar">
          {Array.from({ length: 30 }, (_, i) => i + 1).map((day) => (
            <a href={`/dashboard?day=${day}`} class={`calendar-day ${day < currentDay ? 'completed' : ''} ${day === currentDay ? 'current' : ''}`}>{day}</a>
          ))}
        </div>
      </div>
    </div>

  </div>

  <script is:inline define:vars={{ actualCalories, actualProtein, actualFat, actualCarbs, targetCalories, targetProtein, targetFat, targetCarbs }}>
    // Dark Mode Toggle
    const themeToggle = document.getElementById('themeToggle');
    const themeIcon = document.getElementById('themeIcon');
    const html = document.documentElement;

    const savedTheme = localStorage.getItem('theme') || 'light';
    html.setAttribute('data-theme', savedTheme);
    themeIcon.textContent = savedTheme === 'dark' ? 'üåô' : '‚òÄÔ∏è';

    if (themeToggle) {
      themeToggle.addEventListener('click', function() {
        const newTheme = html.getAttribute('data-theme') === 'dark' ? 'light' : 'dark';
        html.setAttribute('data-theme', newTheme);
        themeIcon.textContent = newTheme === 'dark' ? 'üåô' : '‚òÄÔ∏è';
        localStorage.setItem('theme', newTheme);
      });
    }

    // Notification Toggle
    const notifBell = document.getElementById('notif-bell');
    const notifDropdown = document.getElementById('notificationDropdown');
    
    if (notifBell && notifDropdown) {
      notifBell.addEventListener('click', function(e) {
        e.stopPropagation();
        notifDropdown.classList.toggle('active');
      });
      document.addEventListener('click', function(e) {
        if (!notifDropdown.contains(e.target) && !notifBell.contains(e.target)) {
          notifDropdown.classList.remove('active');
        }
      });
      const viewAllBtn = document.getElementById('view-all-tasks');
      if (viewAllBtn) {
        viewAllBtn.addEventListener('click', function() {
          notifDropdown.classList.remove('active');
          switchTab('tasks');
        });
      }
      document.querySelectorAll('.notification-item').forEach(item => {
        item.addEventListener('click', function() {
          notifDropdown.classList.remove('active');
          switchTab('tasks');
        });
      });
    }

    // Tab Switching
    function switchTab(tabName) {
      document.querySelectorAll('.tab-content').forEach(t => t.classList.remove('active'));
      document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
      const targetTab = document.getElementById('tab-' + tabName);
      if (targetTab) targetTab.classList.add('active');
      const targetBtn = document.querySelector(`[data-tab="${tabName}"]`);
      if (targetBtn) targetBtn.classList.add('active');
    }

    document.querySelectorAll('.tab-btn').forEach(btn => {
      btn.addEventListener('click', function() {
        const tabName = this.getAttribute('data-tab');
        if (tabName) switchTab(tabName);
      });
    });

    // ============================================
    // KETO FLU BANNER
    // ============================================
    const ketoFluBanner = document.getElementById('keto-flu-banner');
    const ketoFluClose = document.getElementById('keto-flu-close');

    if (ketoFluBanner && ketoFluClose) {
      // Check if dismissed today
      const today = new Date().toDateString();
      const dismissedKey = 'keto_flu_dismissed_' + window.location.search;
      const dismissedDate = localStorage.getItem(dismissedKey);

      if (dismissedDate === today) {
        ketoFluBanner.style.display = 'none';
      }

      ketoFluClose.addEventListener('click', function() {
        ketoFluBanner.style.animation = 'ketoFluSlideOut 0.4s ease forwards';
        localStorage.setItem(dismissedKey, today);
        setTimeout(() => {
          ketoFluBanner.style.display = 'none';
        }, 400);
      });
    }
    // ============================================

    // Water Tracker
    let currentWater = parseInt(document.getElementById('water-count')?.textContent || '0');

    document.querySelectorAll('[data-water-action]').forEach(btn => {
      btn.addEventListener('click', async function() {
        const action = this.getAttribute('data-water-action');
        const newCount = Math.max(0, Math.min(8, currentWater + (action === 'plus' ? 1 : -1)));
        if (newCount === currentWater) return;

        try {
          const res = await fetch('/api/water/update', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ glasses: newCount })
          });
          if (res.ok) {
            currentWater = newCount;
            const waterCountEl = document.getElementById('water-count');
            if (waterCountEl) waterCountEl.textContent = newCount;
            document.querySelectorAll('[data-glass-index]').forEach((glass, i) => {
              glass.classList.toggle('filled', i < newCount);
            });
          }
        } catch (error) { console.error('Error:', error); }
      });
    });

    // Manual Macros Entry
    let manualCalories = actualCalories;
    let manualProtein = actualProtein;
    let manualFat = actualFat;
    let manualCarbs = actualCarbs;

    const macroForm = document.getElementById('manual-macro-form');
    if (macroForm) {
      macroForm.addEventListener('submit', function(e) {
        e.preventDefault();
        manualCalories += parseFloat(document.getElementById('manual-calories').value) || 0;
        manualProtein += parseFloat(document.getElementById('manual-protein').value) || 0;
        manualFat += parseFloat(document.getElementById('manual-fat').value) || 0;
        manualCarbs += parseFloat(document.getElementById('manual-carbs').value) || 0;
        
        updateMacroDisplay('calories', manualCalories, targetCalories);
        updateMacroDisplay('protein', manualProtein, targetProtein);
        updateMacroDisplay('fat', manualFat, targetFat);
        updateMacroDisplay('carbs', manualCarbs, targetCarbs);
        
        macroForm.reset();
        showToast('‚úÖ Macros added successfully!');
      });
    }

    function updateMacroDisplay(type, actual, target) {
      const percent = Math.round((actual / target) * 100);
      const valueEl = document.querySelector(`[data-macro-type="${type}"]`);
      if (valueEl) valueEl.textContent = type === 'calories' ? Math.round(actual) : Math.round(actual) + 'g';
      const card = valueEl?.closest('.macro-card-3d');
      if (card) {
        const percentEl = card.querySelector('.macro-percent');
        if (percentEl) percentEl.textContent = percent + '%';
        const progressEl = card.querySelector('[data-progress]');
        if (progressEl) progressEl.style.width = Math.min(percent, 100) + '%';
      }
    }

    function showToast(message) {
      const toast = document.createElement('div');
      toast.style.cssText = 'position:fixed;top:5rem;right:1.5rem;background:linear-gradient(135deg,#10b981,#34d399);color:white;padding:1.25rem 2rem;border-radius:1rem;box-shadow:0 10px 30px rgba(0,0,0,0.3);z-index:9999;font-weight:700;font-size:1.0625rem;';
      toast.textContent = message;
      document.body.appendChild(toast);
      setTimeout(() => toast.remove(), 3000);
    }

    // Charts
    if (actualCalories > 0) {
      window.addEventListener('load', function() {
        if (typeof Chart === 'undefined') return;
        const isDark = document.documentElement.getAttribute('data-theme') === 'dark';
        const textColor = isDark ? '#eaeaea' : '#374151';
        const gridColor = isDark ? 'rgba(255,255,255,0.1)' : 'rgba(0,0,0,0.05)';

        const pieCtx = document.getElementById('macrosPieChart');
        if (pieCtx) {
          new Chart(pieCtx, {
            type: 'doughnut',
            data: {
              labels: ['Protein', 'Fat', 'Net Carbs'],
              datasets: [{ data: [manualProtein * 4, manualFat * 9, manualCarbs * 4], backgroundColor: ['#4facfe', '#fcb69f', '#fed6e3'], borderWidth: 0 }]
            },
            options: {
              responsive: true, maintainAspectRatio: false,
              plugins: { legend: { position: 'bottom', labels: { padding: 20, font: { size: 14, weight: 'bold' }, color: textColor } } }
            }
          });
        }

        const barCtx = document.getElementById('macrosBarChart');
        if (barCtx) {
          new Chart(barCtx, {
            type: 'bar',
            data: {
              labels: ['Protein (g)', 'Fat (g)', 'Net Carbs (g)'],
              datasets: [
                { label: 'Target', data: [targetProtein, targetFat, targetCarbs], backgroundColor: 'rgba(156,163,175,0.5)', borderColor: '#9ca3af', borderWidth: 2, borderRadius: 8 },
                { label: 'Actual', data: [manualProtein, manualFat, manualCarbs], backgroundColor: ['rgba(79,172,254,0.7)', 'rgba(252,182,159,0.7)', 'rgba(254,214,227,0.7)'], borderColor: ['#4facfe', '#fcb69f', '#fed6e3'], borderWidth: 2, borderRadius: 8 }
              ]
            },
            options: {
              responsive: true, maintainAspectRatio: false,
              plugins: { legend: { position: 'top', labels: { padding: 15, font: { size: 14, weight: 'bold' }, color: textColor } } },
              scales: {
                y: { beginAtZero: true, grid: { color: gridColor }, ticks: { color: textColor } },
                x: { grid: { display: false }, ticks: { color: textColor } }
              }
            }
          });
        }
      });
    }

    console.log('‚úÖ Dashboard loaded successfully!');
  </script>
</body>
</html>