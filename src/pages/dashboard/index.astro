};

const mealNames = {
  breakfast: 'Breakfast',
  lunch: 'Lunch',
  dinner: 'Dinner',
  snack: 'Snack',
};
---

<BaseLayout title="Dashboard - Keto App">
  <div class="min-h-screen bg-emerald-50/30">
    
    <nav class="bg-white shadow-sm border-b sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <a href="/dashboard" class="text-2xl font-bold text-emerald-600">
            ğŸ¥‘ Keto App
          </a>
          
          <div class="flex items-center gap-6">
            <div class="hidden md:flex items-center gap-4">
              <a href="/dashboard" class="text-emerald-600 font-semibold">Dashboard</a>
              <a href="/dashboard/shopping-list" class="text-gray-600 hover:text-emerald-600 transition">Shopping</a>
              <a href="/dashboard/profile" class="text-gray-600 hover:text-emerald-600 transition">Profile</a>
            </div>

            <div class="flex items-center gap-4 border-l pl-4">
              <span class="text-gray-700 font-medium">{profile.full_name}</span>
              <form action="/api/auth/logout" method="POST">
                <button type="submit" class="text-red-600 hover:text-red-700 font-medium transition text-sm">
                  Logout
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      
      <div class="bg-emerald-600 rounded-2xl shadow-xl p-8 mb-8 text-white">
        <div class="flex items-center justify-between">
          <div>
