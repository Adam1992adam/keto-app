const dayParam = Astro.url.searchParams.get('day');
const currentDay = dayParam ? parseInt(dayParam) : 1;
const planType = 'basic_30';

const { data: mealPlans } = await supabase
  .from('meal_plans')
  .select('*, recipe:recipes(*)')
  .eq('plan_type', planType)
  .eq('day_number', currentDay)
  .order('order_index');

const todayMeals = mealPlans || [];

const totalMacros = todayMeals.reduce((acc, meal) => {
  const r = meal.recipe || {};
  return {
    calories: acc.calories + (r.calories || 0),
    protein: acc.protein + (r.protein || 0),
    fat: acc.fat + (r.fat || 0),
    carbs: acc.carbs + (r.net_carbs || 0),
  };
}, { calories: 0, protein: 0, fat: 0, carbs: 0 });

const welcome = Astro.url.searchParams.get('welcome');

