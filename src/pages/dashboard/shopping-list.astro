                  <p class="text-sm text-emerald-800">üí° <strong>Tip:</strong> {categories[category].tip}</p>
                </div>
              )}
              
              <ul class="space-y-2">
                {items.map((item: any, idx: number) => (
                  <li class="flex items-start gap-3 p-3 hover:bg-gray-50 rounded-lg transition group">
                    <input 
                      type="checkbox" 
                      id={'item-' + category + '-' + idx}
                      class="mt-1 w-5 h-5 text-emerald-600 rounded focus:ring-emerald-500 no-print cursor-pointer"
                    />
                    <label for={'item-' + category + '-' + idx} class="flex-1 cursor-pointer">
                      <div class="flex items-baseline gap-2">
                        <span class="font-semibold text-gray-800">
                          {item.amount} {item.unit}
